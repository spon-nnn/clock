/* pages/pomodoro/pomodoro.wxss */
/* 顶部标签 */
.tabs {
  display: flex;
  background: var(--card-bg);
  padding: 8rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: var(--text-secondary);
  transition: all 0.3s;
}

.tab.active {
  background: var(--accent);
  color: #fff;
  font-weight: 500;
}

/* 专注模式 */
.focus-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.focus-title {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.focus-subtitle {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* 计时器圆环容器 */
.timer-ring-container {
  position: relative;
  width: 500rpx;
  height: 500rpx;
  margin: 0 auto 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.timer-ring {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.white-ring {
  background: var(--card-bg); /* Use card-bg instead of white for dark mode base */
  z-index: 1;
}

.progress-ring {
  z-index: 2;
  /* background set inline */
  transition: background 1s linear;
}

/* Mask circle to create ring effect */
.timer-ring-container::after {
  content: '';
  position: absolute;
  width: 460rpx; /* inner size */
  height: 460rpx;
  background: var(--bg-color);
  border-radius: 50%;
  z-index: 3;
}

.timer-center {
  position: relative;
  z-index: 4;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.time-left {
  font-size: 80rpx;
  font-weight: 700;
  color: var(--text-primary);
  font-variant-numeric: tabular-nums;
  line-height: 1;
  margin-bottom: 16rpx;
}

.status-text {
  font-size: 28rpx;
  color: var(--text-secondary);
}

/* Duration Picker */
.duration-picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  margin-bottom: 40rpx;
}

.picker-label {
  font-size: 30rpx;
  color: var(--text-primary);
}

.picker-value {
  font-size: 30rpx;
  color: var(--accent);
}

.btn-lg {
  padding: 24rpx 0;
  font-size: 32rpx;
  margin-bottom: 40rpx;
}

/* Stats */
.stats-card {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 30rpx 0;
}

.stats-item {
  text-align: center;
  flex: 1;
}

.stats-num {
  font-size: 40rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.stats-label {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.divider {
  width: 2rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.1);
}

/* Schedule View */
.schedule-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.date-display {
  font-size: 32rpx;
  font-weight: 600;
}

.add-btn {
  background: var(--accent);
  color: #fff;
  padding: 10rpx 24rpx;
  font-size: 24rpx;
  border-radius: 10rpx;
}

.schedule-list {
  min-height: 300rpx;
}

.schedule-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.05);
}

.schedule-item:last-child {
  border-bottom: none;
}

.schedule-time {
  font-size: 28rpx;
  color: var(--accent);
  width: 100rpx;
  font-weight: 600;
}

.schedule-detail {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.schedule-title {
  font-size: 30rpx;
  color: var(--text-primary);
  margin-bottom: 4rpx;
}

.schedule-desc {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* Stats View */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-top: 20rpx;
}

.stat-box {
  background: rgba(255, 255, 255, 0.03);
  padding: 20rpx;
  border-radius: 12rpx;
  text-align: center;
}

.stat-value {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 4rpx;
}

.stat-label {
  font-size: 22rpx;
  color: var(--text-secondary);
}

.category-bar-item {
  margin-bottom: 24rpx;
}

.category-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8rpx;
  font-size: 26rpx;
}

.progress-bar {
  height: 12rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 6rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  border-radius: 6rpx;
}

.progress-fill.work { background: var(--accent); }
.progress-fill.study { background: var(--success); }
.progress-fill.life { background: var(--danger); }
