/* pages/stats/stats.wxss */
.overview-card {
  background: linear-gradient(135deg, #1e40af 0%, #1e3a8a 50%, #3b82f6 100%);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 24rpx;
}

.overview-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.overview-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
}

.period-selector {
  display: flex;
  background: rgba(0, 0, 0, 0.2);
  border-radius: 20rpx;
  padding: 4rpx;
}

.period-btn {
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  border-radius: 16rpx;
}

.period-btn.active {
  background: rgba(255, 255, 255, 0.2);
  color: #ffffff;
}

.stats-highlight {
  display: flex;
  align-items: center;
  justify-content: center;
}

.highlight-item {
  text-align: center;
  padding: 0 40rpx;
}

.highlight-value {
  font-size: 72rpx;
  font-weight: 700;
  color: #ffffff;
}

.highlight-unit {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-left: 8rpx;
}

.highlight-label {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-top: 8rpx;
}

.highlight-divider {
  width: 2rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.3);
}

/* 详细统计网格 */
.detail-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.detail-card {
  background: linear-gradient(135deg, #1a2a4a 0%, #0d1a30 100%);
  border-radius: 20rpx;
  padding: 30rpx;
  text-align: center;
}

.detail-icon {
  font-size: 40rpx;
  margin-bottom: 12rpx;
}

.detail-value {
  font-size: 44rpx;
  font-weight: 700;
  color: #ffffff;
  display: block;
}

.detail-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.5);
  margin-top: 8rpx;
}

/* 分类统计 */
.category-section {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 24rpx;
  display: block;
}

.category-chart {
  padding: 10rpx 0;
}

.category-row {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.category-row:last-child {
  margin-bottom: 0;
}

.category-info {
  display: flex;
  align-items: center;
  width: 120rpx;
}

.category-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 4rpx;
  margin-right: 12rpx;
}

.category-name {
  font-size: 26rpx;
  color: #ffffff;
}

.category-bar-wrapper {
  flex: 1;
  height: 16rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 8rpx;
  margin: 0 16rpx;
  overflow: hidden;
}

.category-bar {
  height: 100%;
  border-radius: 8rpx;
  transition: width 0.5s ease;
}

.category-percent {
  width: 60rpx;
  text-align: right;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.6);
}

/* 记录列表 */
.records-section {
  margin-bottom: 24rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.clear-btn {
  font-size: 26rpx;
  color: #ef4444;
}

.record-list {
  max-height: 500rpx;
  overflow-y: auto;
}

.record-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: rgba(0, 0, 0, 0.2);
  border-radius: 12rpx;
  margin-bottom: 12rpx;
}

.record-item:last-child {
  margin-bottom: 0;
}

.record-date {
  width: 80rpx;
  text-align: center;
  margin-right: 20rpx;
}

.date-day {
  font-size: 36rpx;
  font-weight: 700;
  color: #3b82f6;
  display: block;
}

.date-month {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.5);
}

.record-info {
  flex: 1;
}

.record-time {
  font-size: 28rpx;
  color: #ffffff;
  display: block;
}

.record-duration {
  font-size: 24rpx;
  color: #22c55e;
  margin-top: 4rpx;
}

.record-note {
  max-width: 200rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  background: rgba(255, 255, 255, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
}

.empty-records {
  text-align: center;
  padding: 60rpx;
  color: rgba(255, 255, 255, 0.4);
  font-size: 28rpx;
}

/* 设备信息 */
.device-section {
  margin-bottom: 40rpx;
}

.device-info-row {
  display: flex;
  justify-content: space-between;
  padding: 16rpx 0;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
}

.device-info-row:last-child {
  border-bottom: none;
}

.device-label {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.6);
}

.device-value {
  font-size: 28rpx;
  color: #ffffff;
}

.device-value.online {
  color: #22c55e;
}

.device-value.offline {
  color: #ef4444;
}

