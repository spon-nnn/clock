/* pages/schedule/schedule.wxss */
.tabs {
  display: flex;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 16rpx;
  padding: 8rpx;
  margin-bottom: 30rpx;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.6);
  border-radius: 12rpx;
  transition: all 0.3s;
}

.tab.active {
  background: #3b82f6;
  color: #ffffff;
  font-weight: 600;
}

/* 日程部分 */
.schedule-section {
  margin-bottom: 40rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
}

.add-btn {
  background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #ffffff;
}

/* 日程项 */
.schedule-item {
  display: flex;
  margin-bottom: 20rpx;
}

.schedule-time-bar {
  width: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.time-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #3b82f6;
}

.time-line {
  width: 4rpx;
  flex: 1;
  background: linear-gradient(to bottom, #3b82f6, transparent);
  margin-top: 12rpx;
}

.schedule-content-card {
  flex: 1;
  background: rgba(255, 255, 255, 0.08);
  border-radius: 16rpx;
  padding: 24rpx;
  position: relative;
}

.schedule-main {
  margin-bottom: 12rpx;
}

.schedule-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #ffffff;
  display: block;
}

.schedule-period {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.5);
  margin-top: 4rpx;
}

.schedule-actions {
  position: absolute;
  right: 24rpx;
  top: 24rpx;
  display: flex;
  gap: 16rpx;
}

.action-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  font-size: 24rpx;
}

.action-btn.edit {
  background: rgba(59, 130, 246, 0.2);
}

.action-btn.delete {
  background: rgba(239, 68, 68, 0.2);
}

/* 未来日程 */
.schedule-item.future {
  align-items: flex-start;
}

.schedule-date-badge {
  width: 80rpx;
  background: rgba(59, 130, 246, 0.2);
  border-radius: 12rpx;
  padding: 12rpx;
  text-align: center;
  margin-right: 16rpx;
}

.date-day {
  font-size: 36rpx;
  font-weight: 700;
  color: #3b82f6;
  display: block;
}

.date-month {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.6);
}

.schedule-time-range {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.5);
  margin-top: 4rpx;
}

.empty-section {
  text-align: center;
  padding: 60rpx;
}

.empty-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.4);
}

/* 日历卡片 */
.calendar-card {
  padding: 24rpx;
}

.calendar-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.month-nav {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #3b82f6;
  background: rgba(59, 130, 246, 0.1);
  border-radius: 50%;
}

.current-month {
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
}

.weekday-row {
  display: flex;
  margin-bottom: 16rpx;
}

.weekday {
  flex: 1;
  text-align: center;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.5);
}

.days-grid {
  display: flex;
  flex-wrap: wrap;
}

.day-cell {
  width: calc(100% / 7);
  aspect-ratio: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}

.day-num {
  font-size: 28rpx;
  color: #ffffff;
}

.day-cell.other-month .day-num {
  color: rgba(255, 255, 255, 0.3);
}

.day-cell.today {
  background: rgba(59, 130, 246, 0.2);
  border-radius: 50%;
}

.day-cell.selected {
  background: #3b82f6;
  border-radius: 50%;
}

.schedule-dot {
  width: 8rpx;
  height: 8rpx;
  background: #22c55e;
  border-radius: 50%;
  position: absolute;
  bottom: 8rpx;
}

/* 选中日期日程 */
.selected-date-schedules {
  margin-top: 24rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.add-btn-small {
  font-size: 26rpx;
  color: #3b82f6;
}

.day-schedule-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
}

.day-schedule-item:last-child {
  border-bottom: none;
}

.item-time {
  font-size: 28rpx;
  color: #3b82f6;
  width: 100rpx;
}

.item-content {
  flex: 1;
  font-size: 28rpx;
  color: #ffffff;
}

.item-delete {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #ef4444;
}

.empty-day {
  text-align: center;
  padding: 40rpx;
  color: rgba(255, 255, 255, 0.4);
  font-size: 28rpx;
}

/* 弹窗 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: flex-end;
  z-index: 1000;
}

.modal-content {
  width: 100%;
  background: #1a2a4a;
  border-radius: 32rpx 32rpx 0 0;
  padding: 40rpx;
  max-height: 80vh;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #ffffff;
}

.modal-close {
  font-size: 48rpx;
  color: rgba(255, 255, 255, 0.5);
  line-height: 1;
}

.form-group {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-bottom: 12rpx;
}

.form-row {
  display: flex;
  gap: 20rpx;
}

.form-group.half {
  flex: 1;
}

.picker-value, .form-input {
  background: rgba(255, 255, 255, 0.1);
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 12rpx;
  padding: 24rpx;
  color: #ffffff;
  font-size: 28rpx;
}

.category-options {
  display: flex;
  gap: 16rpx;
}

.category-option {
  flex: 1;
  background: rgba(255, 255, 255, 0.1);
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 12rpx;
  padding: 20rpx;
  text-align: center;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.7);
}

.category-option.selected {
  border-color: #3b82f6;
  background: rgba(59, 130, 246, 0.2);
  color: #3b82f6;
}

.submit-btn {
  margin-top: 20rpx;
  width: 100%;
}

