/* pages/index/index.wxss - 设备列表样式 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 30rpx;
}

.title {
  font-size: 28px;
  font-weight: 700;
  margin-bottom: 5px;
}

.subtitle {
  font-size: 14px;
  color: var(--text-secondary);
}

.device-list {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.device-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: transform 0.1s;
}

.device-card:active {
  transform: scale(0.98);
}

.device-info {
  display: flex;
  align-items: center;
  gap: 15px;
}

.device-icon {
  width: 48px;
  height: 48px;
  background: rgba(59, 130, 246, 0.1);
  border-radius: 12px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24px;
  color: var(--accent);
}

.device-name {
  font-size: 16px;
  font-weight: 600;
  margin-bottom: 4px;
}

.device-id {
  font-size: 12px;
  color: var(--text-secondary);
}

.device-status {
  display: flex;
  align-items: center;
  gap: 6px;
  font-size: 12px;
  color: var(--success);
}

.status-dot {
  width: 8px;
  height: 8px;
  border-radius: 50%;
  background: var(--success);
  box-shadow: 0 0 8px var(--success);
}

/* Add Card */
.add-card {
  border: 2px dashed rgba(255, 255, 255, 0.1);
  background: transparent;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 30px;
  gap: 10px;
  cursor: pointer;
}

.add-icon {
  font-size: 32px;
  color: var(--text-secondary);
  font-weight: 300;
}

.add-text {
  color: var(--text-secondary);
  font-size: 14px;
}

/* 操作菜单 */
.action-sheet {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 100;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.action-sheet-content {
  background: var(--card-bg);
  border-radius: 20px 20px 0 0;
  padding: 20px;
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from { transform: translateY(100%); }
  to { transform: translateY(0); }
}

.action-item {
  display: flex;
  align-items: center;
  padding: 16px;
  border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  font-size: 16px;
  gap: 15px;
}

.action-item:last-child {
  border-bottom: none;
}

.action-icon {
  font-size: 20px;
}

.action-item.danger {
  color: var(--danger);
}
